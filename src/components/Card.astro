---
interface Props {
  title: string;
  body: string;
  image: string;
  tag: string;
  author: string;
}

const { title, body, image, tag, author } = Astro.props;
---

<div
  class="shadow-custom bg-white w-[352px] rounded-xl p-4"
>
  <header>
    <img class="w-full h-[152px] rounded-xl mb-4" src={image} alt={title} />
    <span
      class="rounded-full bg-[#E6D6FC] text-[#883AE1] text-[10px] font-bold px-4 py-[6px]"
      >{tag}</span
    >
    <h2 class="text-lg text-[#20293A] font-bold mt-4 mb-[6px]">
      {title}
    </h2>
    <p class="text-gray-500/90 font-light text-sm mb-5 text-pretty">
      {body}
    </p>
  </header>
  <footer class="">
    <p class="text-[#6C727F] font-normal text-[12px] mt-4 ml-4">{author}</p>
  </footer>
</div>
<style>
	footer{
		border-top: 1px solid #E5EAF0 !important;
		width: 110%;
		margin-left: -16px;
	}
</style>
